<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragme">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/webView" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:orientation="horizontal"
        android:id="@+id/pane">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#64bfbfbf"
            android:layout_row="0"
            android:layout_column="0">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/button"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="onClickToSettings"
                android:layout_gravity="top|left"
                android:background="@drawable/tosettingblack" />
        </FrameLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Prev"
            android:id="@+id/button3"
            android:layout_row="29"
            android:layout_column="0"
            android:layout_columnSpan="16"
            android:layout_gravity="bottom|right"
            android:onClick="prevPage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="NEXT"
            android:id="@+id/button4"
            android:layout_row="29"
            android:layout_column="16"
            android:layout_gravity="bottom|right"
            android:onClick="nextPage" />

    </GridLayout>

</RelativeLayout>
