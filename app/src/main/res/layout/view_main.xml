<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragme">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        android:background="#ff000000"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/pane" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/pane">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=""
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClickToSettings"
            android:layout_gravity="top|left" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=""
            android:id="@+id/BookMark"
            android:layout_row="0"
            android:onClick="setBookMark"
            android:layout_column="16"
            android:layout_gravity="top|right" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:id="@+id/button3"
            android:layout_row="29"
            android:layout_column="0"
            android:layout_columnSpan="16"
            android:layout_gravity="bottom|right"
            android:onClick="prevPage" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/button4"
            android:layout_row="29"
            android:layout_column="16"
            android:layout_gravity="bottom|right"
            android:onClick="nextPage" />
    </GridLayout>

</RelativeLayout>
